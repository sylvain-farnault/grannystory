<div class="row justify-content-center">
  <div class="col-lg-4">
    <br>

    <%= simple_form_for(granny) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-inputs">
      <%= f.input :address %>
    </div>

    <div class="form-inputs">
      <%= f.input :birth_date, as: :date, html5: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :price %>
    </div>

    <div class="form-inputs">
      <%= f.input :photo, as: :file %>
    </div>

    <!-- Add selec2 for passions -->
    <%= f.association :passions,
                      collection: Passion.order("name ASC"),
                      input_html: { class: "select2", multiple: "true" } %>
    <div class="form-actions">
      <div class="col-sm-12 text-center">
      <%= f.button :submit, :class => "btn btn-outline-warning btn-lg " %>
      <% end %>
    </div>
  </div>
</div>
</div>
