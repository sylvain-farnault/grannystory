<h1>DashBoard</h1>
<hr>
<h2>My grannies</h2>
<div class="col-sm-4 text-center">
  <%= link_to "Add a Granny ", new_granny_path(@granny), :class => "btn btn-primary btn-lg " %>
</div>
<div class="cards mt-5">
<% current_user.grannies.each do |granny| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/people)">
    <%= link_to granny.name, granny_path(granny) %>
    <div class="badges-container">

    </div>
  </div>
  <% end %>
</div>
<hr>

<h2>My grannies's stories</h2>
<div class="cards mt-5">
<% current_user.rent_grannies.each do |granny| %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/people)">
    <%= link_to granny.name, granny_path(granny) %>
    <div class="badges-container">

    </div>
  </div>
<% end %>
</div>
